<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Date Picker -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/dateButton"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_date"
            android:layout_marginBottom="20dp" />

        <!-- Meal Section Template -->
        <!-- Breakfast -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@android:color/holo_blue_dark"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/holo_blue_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/breakfastLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/breakfast"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/breakfastMinus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/dash"
                        android:textColor="@color/white"/>

                    <EditText
                        android:id="@+id/breakfastCount"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/_0"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="8dp"
                        tools:ignore="LabelFor" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/breakfastPlus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/plus" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/breakfastStopwatch"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_stopwatch" />
                    <TextView
                        android:id="@+id/breakfastTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_00_00"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Lunch -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@android:color/holo_green_dark"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/holo_green_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/lunchLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lunch"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/lunchMinus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/dash" />

                    <EditText
                        android:id="@+id/lunchCount"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/_0"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="8dp"
                        tools:ignore="LabelFor" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/lunchPlus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/plus" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/lunchStopwatch"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_stopwatch" />
                    <TextView
                        android:id="@+id/lunchTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_00_00"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Snacks -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="@android:color/holo_orange_dark"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="@android:color/holo_orange_light">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/snacksLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/snacks"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/snacksMinus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/dash" />

                    <EditText
                        android:id="@+id/snacksCount"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/_0"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="8dp"
                        tools:ignore="LabelFor" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/snacksPlus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/plus" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/snacksStopwatch"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_stopwatch" />
                    <TextView
                        android:id="@+id/snacksTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_00_00"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Dinner -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="#6750A4"
            app:strokeWidth="1dp"
            android:layout_marginBottom="12dp"
            android:backgroundTint="#6750A4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/dinnerLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dinner"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dinnerMinus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/dash" />

                    <EditText
                        android:id="@+id/dinnerCount"
                        android:layout_width="60dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:importantForAutofill="no"
                        android:inputType="number"
                        android:text="@string/_0"
                        android:textSize="18sp"
                        android:layout_marginHorizontal="8dp"
                        tools:ignore="LabelFor" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dinnerPlus"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:text="@string/plus" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray"
                    android:layout_marginVertical="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/dinnerStopwatch"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/start_stopwatch" />
                    <TextView
                        android:id="@+id/dinnerTimer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/_00_00"
                        android:textSize="14sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</ScrollView> 